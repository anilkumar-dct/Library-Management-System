@model Book
<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card p-4" style="width: 40rem;">
        <h2 class="mb-3">Add New Book</h2>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="BookTitle" class="form-label">Book Title</label>
                    <input asp-for="BookTitle" type="text" class="form-control bg-secondary text-light border-0" placeholder="Enter book title">
                    <span class="text-danger" asp-validation-for="BookTitle"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Author" class="form-label">Author</label>
                    <input asp-for="Author" type="text" class="form-control bg-secondary text-light border-0" placeholder="Enter author name">
                    <span class="text-danger" asp-validation-for="Author"></span>
                </div>
                <div class="mb-3">
                    <label asp-for ="Genre" class="form-label">Genre</label>
                    <select asp-for="Genre" class="form-select bg-secondary text-light border-0">
                        <option value="">Select genre</option> <!-- Empty value ensures validation triggers -->
                        <option value="Fiction">Fiction</option>
                        <option value="Science Fiction">Science Fiction</option>
                        <option value="Non-Fiction">Non-Fiction</option>
                        <option value="Mystery">Mystery</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Genre"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Year" class="form-label">Year</label>
                    <input asp-for="Year" type="text" class="form-control bg-secondary text-light border-0" placeholder="Enter publication year">
                    <span class="text-danger" asp-validation-for="Year"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <div>
                        <input value="true" asp-for="Status" type="radio" class="form-check-input" name="status" id="available">
                        <label asp-for="Status" for="available" class="form-check-label">Available</label>
                        <input value="false" asp-for="Status" type="radio" class="form-check-input ms-3" name="status" id="borrowed">
                        <label asp-for="Status" for="borrowed" class="form-check-label">Borrowed</label>
                    </div>
                    <span class="text-danger" asp-validation-for="Status"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary me-2">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Book</button>
                </div>
            </form>
        </div>
    </div>
</div>
